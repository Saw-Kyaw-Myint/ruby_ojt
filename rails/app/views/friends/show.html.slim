p style="color: green"= notice
 == render @friend
.card
  .card-header.font-weight-bolder.h3.text-primary
    p Personal Information
  .card-body
    .d-flex.justify-content-between.align-items-center
      h5.card-title.h4 = @friend.first_name+" " + @friend.last_name
      div
        = link_to "Edit this friend", edit_friend_path(@friend),class:"text-success"
        = link_to "Back to friends", friends_path,class:"text-secondary"
    .card-text
      p name : #{@friend.first_name + " " +@friend.last_name}
      p email : #{@friend.email}
      p phone : #{@friend.phone}
      p twitter : #{@friend.twitter}
